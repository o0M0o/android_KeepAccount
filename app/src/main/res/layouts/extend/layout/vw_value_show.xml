<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <!-- for pay -->
    <TextView
        android:id="@+id/tv_pay_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支"
        android:textColor="@color/darkred"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pay_count"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/darkred"
        app:layout_constraintBottom_toBottomOf="@id/tv_pay_tag"
        app:layout_constraintStart_toEndOf="@id/tv_pay_tag"
        app:layout_constraintTop_toTopOf="@id/tv_pay_tag" />

    <TextView
        android:id="@+id/tv_pay_amount"
        android:layout_marginStart="46dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textColor="@color/darkred"
        app:layout_constraintBottom_toBottomOf="@id/tv_pay_tag"
        app:layout_constraintStart_toEndOf="@id/tv_pay_tag"
        app:layout_constraintTop_toTopOf="@id/tv_pay_tag" />

    <ImageView
        android:id="@+id/iv_pay_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/darkred"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pay_tag" />

    <!-- for income -->
    <TextView
        android:id="@+id/tv_income_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="收"
        android:textColor="@color/forestgreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_pay_line" />

    <TextView
        android:id="@+id/tv_income_count"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/darkred"
        app:layout_constraintBottom_toBottomOf="@id/tv_income_tag"
        app:layout_constraintStart_toEndOf="@id/tv_income_tag"
        app:layout_constraintTop_toTopOf="@id/tv_income_tag" />

    <TextView
        android:id="@+id/tv_income_amount"
        android:layout_marginStart="46dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textColor="@color/darkred"
        app:layout_constraintBottom_toBottomOf="@id/tv_income_tag"
        app:layout_constraintStart_toEndOf="@id/tv_income_tag"
        app:layout_constraintTop_toTopOf="@id/tv_income_tag" />

    <ImageView
        android:id="@+id/iv_income_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/forestgreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_income_tag" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_pay_income"
        android:layout_width="140dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:text="支"
                android:textColor="@color/darkred"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_pay_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:text="5"
                android:textColor="@color/darkred"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_pay_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="72dp"
                android:text="754.76"
                android:textColor="@color/darkred"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_pay_line"
                android:layout_width="136dp"
                android:layout_height="1dp"
                android:layout_below="@id/tv_pay_tag"
                android:layout_marginTop="2dp"
                android:background="@color/red" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_pay"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/iv_income_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:text="收"
                android:textColor="@color/forestgreen"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_income_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:text="5"
                android:textColor="@color/forestgreen"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_income_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="72dp"
                android:text="754.76"
                android:textColor="@color/forestgreen"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_income_line"
                android:layout_width="136dp"
                android:layout_height="1dp"
                android:layout_below="@id/iv_income_tag"
                android:layout_marginTop="2dp"
                android:background="@color/forestgreen" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_balance"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_balance_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="余"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_balance_tag"
            android:text="0.00"
            android:textColor="@color/darkslategrey"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
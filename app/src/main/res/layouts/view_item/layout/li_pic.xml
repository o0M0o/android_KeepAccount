<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_ib"
        android:layout_width="78dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ib_image_refresh"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:background="@color/trans_1"
            android:padding="8dp"
            android:src="@drawable/ic_refresh_1" />

        <ImageButton
            android:id="@+id/ib_image_remove"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:background="@color/trans_1"
            android:padding="8dp"
            android:src="@drawable/ic_delete_1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_margin="2dp"
        android:contentDescription="@string/iv_act_hint"
        android:scaleType="fitCenter" />
</LinearLayout>

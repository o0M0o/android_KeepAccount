<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/rl_delete"
        layout="@layout/item_act_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_header"
        android:layout_alignTop="@+id/rl_header"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp" />

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/rl_delete"
        android:padding="4dp">

        <RelativeLayout
            android:id="@+id/rl_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:text="2016-07"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_day_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tv_month"
                android:layout_below="@id/tv_month"
                android:text="15"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_day_number"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/tv_day_number"
                android:text="日"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_day_in_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_day"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/tv_day"
                android:text="星期三"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/rl_date">

            <include layout="@layout/frg_amount_info" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_delete"
        android:background="@color/red_ff725f_half"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/vs_daily_info"
        android:layout_alignBottom="@+id/vs_daily_info"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_delete_1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/rl_delete">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:text="2016-07"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_day_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_month"
            android:layout_below="@id/tv_month"
            android:text="15"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_day_number"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/tv_day_number"
            android:text="日"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_day_in_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_day"
            android:layout_alignEnd="@id/tv_month"
            android:text="星期三"
            android:textSize="12sp" />
    </RelativeLayout>

    <wxm.KeepAccount.ui.data.show.note.base.ValueShow
        android:id="@+id/vs_daily_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/rl_date"
        app:pxLineLen="140dp"
        app:szIncomeAmount="455.45"
        app:szIncomeCount="5"
        app:szPayAmount="300.54"
        app:szPayCount="5" />

</RelativeLayout>
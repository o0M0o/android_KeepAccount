<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/rl_delete"
        layout="@layout/item_act_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_header"
        android:layout_alignTop="@+id/rl_header"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp" />

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_toEndOf="@id/rl_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_budget_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活预算"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/rl_budget_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_yuan"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_yuan" />

                <TextView
                    android:id="@+id/tv_budget_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/iv_yuan"
                    android:text="(总额)7500/(剩余)4000"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_budget_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_note"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_note" />

                <TextView
                    android:id="@+id/tv_budget_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/iv_note"
                    android:text="生活开支类预算"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/right_arrow"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header" >

        <ListView
            android:id="@+id/lv_show_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="48dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp" />
    </RelativeLayout>
</RelativeLayout>
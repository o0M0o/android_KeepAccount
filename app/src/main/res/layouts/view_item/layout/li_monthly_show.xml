<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    tools:ignore="HardcodedText">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="2016年10月"
            android:textColor="@color/black"
            android:textSize="@dimen/item_big_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/vs_monthly_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vs_monthly_info" />

        <wxm.KeepAccount.ui.data.show.note.base.ValueShow
            android:id="@+id/vs_monthly_info"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pxLineLen="140dp"
            app:szIncomeAmount="455.45"
            app:szIncomeCount="5"
            app:szPayAmount="300.54"
            app:szPayCount="5" />
    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/lv_show_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cl_header"
        android:layout_marginStart="12dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp" />
</RelativeLayout>
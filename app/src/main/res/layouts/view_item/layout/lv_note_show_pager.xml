<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:longClickable="true"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@id/rl_attach_button"
            layout="@layout/attach_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_lv_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_action"
            android:layout_below="@id/rl_attach_button">

            <ListView
                android:id="@+id/lv_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_3"
                android:divider="@android:color/transparent"
                android:dividerHeight="1dp"
                android:fastScrollEnabled="false"
                android:longClickable="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/grey_2"
            android:padding="2dp">

            <RelativeLayout
                android:id="@+id/rl_hide_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl_acts"
                android:layout_alignTop="@+id/rl_acts"
                android:layout_margin="2dp"
                android:background="@drawable/rl_act_hide_show"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iv_show_tag"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_to_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_acts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/rl_hide_show">

                <wxm.KeepAccount.ui.extend.IconButton.IconButton
                    android:id="@+id/ib_report"
                    android:layout_width="50dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/rl_action_shape"
                    app:dpIconHeight="20dp"
                    app:dpIconWidth="20dp"
                    app:emOrientation="vertical"
                    app:rfIcon="@drawable/ic_report"
                    app:spActNameSize="10sp"
                    app:szActName="@string/cn_report" />

                <wxm.KeepAccount.ui.extend.IconButton.IconButton
                    android:id="@+id/ib_add"
                    android:layout_width="50dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@id/ib_report"
                    android:background="@drawable/rl_action_shape"
                    app:dpIconHeight="20dp"
                    app:dpIconWidth="20dp"
                    app:emOrientation="vertical"
                    app:rfIcon="@drawable/ic_add_note"
                    app:spActNameSize="10sp"
                    app:szActName="@string/cn_add_note" />


                <wxm.KeepAccount.ui.extend.IconButton.IconButton
                    android:id="@+id/ib_delete"
                    android:layout_width="50dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@id/ib_add"
                    android:background="@drawable/rl_action_shape"
                    app:dpIconHeight="20dp"
                    app:dpIconWidth="20dp"
                    app:emOrientation="vertical"
                    app:rfIcon="@drawable/ic_delete_1"
                    app:spActNameSize="10sp"
                    app:szActName="@string/cn_delete_note" />


                <wxm.KeepAccount.ui.extend.IconButton.IconButton
                    android:id="@+id/ib_refresh"
                    android:layout_width="50dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@id/ib_delete"
                    android:background="@drawable/rl_action_shape"
                    app:dpIconHeight="20dp"
                    app:dpIconWidth="20dp"
                    app:emOrientation="vertical"
                    app:rfIcon="@drawable/ic_refresh_1"
                    app:spActNameSize="10sp"
                    app:szActName="@string/cn_refresh" />


                <wxm.KeepAccount.ui.extend.IconButton.IconButton
                    android:id="@+id/ib_sort"
                    android:layout_width="50dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@id/ib_refresh"
                    android:background="@drawable/rl_action_shape"
                    app:dpIconHeight="20dp"
                    app:dpIconWidth="20dp"
                    app:emOrientation="vertical"
                    app:rfIcon="@drawable/ic_sort_down_1"
                    app:spActNameSize="10sp"
                    app:szActName="@string/cn_sort_down_by_time" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
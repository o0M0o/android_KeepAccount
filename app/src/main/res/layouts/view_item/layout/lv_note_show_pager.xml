<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:longClickable="true"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@id/rl_attach_button"
            layout="@layout/attach_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_lv_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_attach_button">

            <ListView
                android:id="@+id/lv_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_3"
                android:divider="@android:color/transparent"
                android:dividerHeight="1dp"
                android:fastScrollEnabled="false"
                android:longClickable="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/grey_2"
            android:padding="2dp">

            <RelativeLayout
                android:id="@+id/rl_hide_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl_acts"
                android:layout_alignTop="@+id/rl_acts"
                android:layout_margin="2dp"
                android:background="@drawable/rl_act_hide_show"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iv_show_tag"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_to_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_acts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/rl_hide_show">

                <RelativeLayout
                    android:id="@+id/rl_act_report"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/rl_action_shape"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_report"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_report" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_report"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:text="@string/cn_report"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_act_add"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@id/rl_act_report"
                    android:background="@drawable/rl_action_shape"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_add_note" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_add"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:text="@string/cn_add_note"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_act_delete"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@id/rl_act_add"
                    android:background="@drawable/rl_action_shape"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_delete_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_delete"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:text="@string/cn_delete_note"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_act_refresh"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@id/rl_act_delete"
                    android:background="@drawable/rl_action_shape"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_refresh"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_refresh_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_refresh"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:text="@string/cn_refresh"
                        android:textSize="10sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_act_sort"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@id/rl_act_refresh"
                    android:background="@drawable/rl_action_shape"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_sort"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_sort_down_1" />

                    <TextView
                        android:id="@+id/tv_sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_sort"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:text="@string/cn_sort_down_by_time"
                        android:textSize="10sp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
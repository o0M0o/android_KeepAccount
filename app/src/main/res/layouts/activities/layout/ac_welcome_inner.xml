<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="wxm.KeepAccount.ui.acinterface.ACWelcome"
    android:background="@color/lightgray"
    android:id="@+id/rl_welcome">

    <cn.wxm.andriodutillib.DragGrid.DragGridView
        android:id="@+id/dgv_buttons"
        android:listSelector="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:cacheColorHint="@android:color/transparent"
        android:verticalSpacing="10dip"
        android:horizontalSpacing="10dip"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:numColumns="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/ll_button">
    </cn.wxm.andriodutillib.DragGrid.DragGridView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="75dp"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/ll_button">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_setting"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/antiquewhite"
            android:drawableTop="@drawable/ic_menu_setting"
            android:paddingTop="4dp"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="4dp"
            android:text="@string/cn_setting"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp" />
    </LinearLayout>

</RelativeLayout>

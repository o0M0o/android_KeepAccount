<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wxm.KeepAccount.ui.acinterface.ACWelcomeSimple">

    <Button
        android:layout_width="@dimen/bigbutton_width"
        android:layout_height="@dimen/bigbutton_height"
        android:text="@string/cn_lookdata"
        android:id="@+id/bt_lookdata"
        android:drawableTop="@drawable/ic_datashow_01"
        android:textAlignment="center"
        android:background="@color/antiquewhite"
        android:paddingTop="12dp"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/bigbutton_top_margin"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="@dimen/bigbutton_width"
        android:layout_height="@dimen/bigbutton_height"
        android:text="@string/cn_leave_login"
        android:id="@+id/bt_leave_login"
        android:background="@color/antiquewhite"
        android:textSize="14sp"
        android:drawableTop="@drawable/ic_leave_login"
        android:paddingTop="12dp"
        android:layout_alignTop="@+id/bt_edit_budget"
        android:layout_toRightOf="@+id/bt_edit_budget"
        android:layout_marginLeft="24dp" />

    <Button
        android:layout_width="@dimen/bigbutton_width"
        android:layout_height="@dimen/bigbutton_height"
        android:text="@string/cn_edit_remind"
        android:id="@+id/bt_edit_remind"
        android:textAlignment="center"
        android:background="@color/antiquewhite"
        android:paddingTop="12dp"
        android:textSize="14sp"
        android:drawableTop="@drawable/ic_remaind"
        android:layout_alignLeft="@+id/bt_edit_budget"
        android:layout_below="@+id/bt_edit_budget"
        android:layout_marginTop="@dimen/bigbutton_top_margin" />

    <Button
        android:layout_width="@dimen/bigbutton_width"
        android:layout_height="@dimen/bigbutton_height"
        android:text="@string/cn_edit_budget"
        android:id="@+id/bt_edit_budget"
        android:textAlignment="center"
        android:background="@color/antiquewhite"
        android:paddingTop="12dp"
        android:textSize="14sp"
        android:drawableTop="@drawable/ic_budget"
        android:layout_below="@+id/bt_lookdata"
        android:layout_alignLeft="@+id/bt_lookdata"
        android:layout_marginTop="@dimen/bigbutton_top_margin" />

    <Button
        android:layout_width="@dimen/bigbutton_width"
        android:layout_height="@dimen/bigbutton_height"
        android:text="@string/cn_add_note"
        android:id="@+id/bt_add_note"
        android:textAlignment="center"
        android:background="@color/antiquewhite"
        android:paddingTop="12dp"
        android:textSize="14sp"
        android:drawableTop="@drawable/ic_add"
        android:layout_alignTop="@+id/bt_lookdata"
        android:layout_toRightOf="@+id/bt_lookdata"
        android:layout_marginLeft="24dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wxm.KeepAccount.ui.acutility.ACRecord">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/ar_tv_recordtype"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cn_income"
            android:id="@+id/ar_rb_income"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:checked="true"
            android:clickable="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cn_pay"
            android:id="@+id/ar_rb_pay"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="210dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:clickable="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cn_record_type"
        android:id="@+id/ar_tv_recordtype"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/relativeLayout"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cn_record_detail"
        android:id="@+id/ar_tv_detail"
        android:textSize="20sp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_marginTop="8dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_reason"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ar_tv_detail">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ar_et_info"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_reason"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_date"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/til_reason">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/ar_et_date"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_date"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_amount"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/til_date">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/ar_et_amount"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_amount"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cn_use_budget"
        android:id="@+id/ar_tv_budget"
        android:layout_alignParentStart="true"
        android:layout_below="@id/til_amount"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="18sp"
        android:layout_marginTop="4dp" />




    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/til_note"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ar_sp_budget"
        android:layout_marginTop="8dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ar_et_note"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_note">
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ar_sp_budget"
        android:layout_below="@+id/til_amount"
        android:spinnerMode="dropdown"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ar_tv_budget"
        android:layout_marginLeft="16dp" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:background="@color/color_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_budget_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活预算"
                android:textSize="20sp"
                android:textColor="@color/black"  />

            <RelativeLayout
                android:id="@+id/rl_budget_amount"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_yuan"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_yuan"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/tv_budget_amount"
                    android:layout_toRightOf="@id/iv_yuan"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(总额)7500/(剩余)4000"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_budget_note"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_note"
                    android:src="@drawable/ic_note"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/tv_budget_note"
                    android:layout_toRightOf="@id/iv_note"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生活开支类预算"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_hide_show"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_show_1"
            android:layout_centerVertical="true" />

        <ImageButton
            android:id="@+id/ib_action"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="false"
            android:src="@drawable/ic_delete_1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ib_hide_show"
            android:layout_marginRight="4dp"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_header"
        android:background="@color/beige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lv_show_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:layout_marginLeft="48dp"
            android:dividerHeight="1dp" />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-07"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_day_number"
            android:text="15"
            android:layout_below="@id/tv_month"
            android:layout_alignLeft="@id/tv_month"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_day"
            android:text="日"
            android:layout_alignBottom="@id/tv_day_number"
            android:layout_toRightOf="@id/tv_day_number"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_day_in_week"
            android:text="星期三"
            android:layout_alignBottom="@id/tv_day"
            android:layout_toRightOf="@id/tv_day"
            android:layout_marginLeft="8dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pay_info"
        android:layout_toRightOf="@id/rl_date"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交通费"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_pay_time"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="12:04"
            android:layout_below="@id/tv_pay_title"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/rl_pay_note"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_pay_time"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_note"
                android:src="@drawable/ic_note"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/tv_pay_note"
                android:layout_toRightOf="@id/iv_note"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活开支类预算"
                android:layout_marginLeft="4dp"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:src="@drawable/right_arrow"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_pay_amount"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="68dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 145.75"
            android:textColor="@color/darkred"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_header">
        <TextView
            android:id="@+id/tv_year"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp" />

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_year"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/liit_note_info" />
        </RelativeLayout>

        <!--
        <RelativeLayout
            android:id="@+id/rl_balance"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ib_hide_show"
            android:layout_marginRight="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/liit_balance_info" />
        </RelativeLayout>
        -->

        <ImageButton
            android:id="@+id/ib_hide_show"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_show_1"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_header"
        android:background="@color/grey_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lv_show_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:layout_marginLeft="48dp"
            android:dividerHeight="1dp" />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:longClickable="true">

    <RelativeLayout
        android:id="@+id/rl_attach_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/rl_filter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/beige">


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/giveup_filter"
                android:id="@+id/bt_giveup_filter"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="点击取消过滤"
                android:layout_centerVertical="true"
                android:id="@+id/textView"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_accpet_giveup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_filter"
            android:background="@color/antiquewhite">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cn_giveup"
                android:id="@+id/bt_giveup"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cn_accpet"
                android:id="@+id/bt_accpet"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/bt_giveup"
                android:layout_marginRight="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="放弃或者确认选择"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabvp_lv_main"
        android:background="#80ffffff"
        android:longClickable="true"
        android:layout_below="@+id/rl_attach_button"
        android:dividerHeight="2dp"
        android:divider="@android:color/transparent" />

    <cn.wxm.andriodutillib.capricorn.RayMenu
        android:id="@+id/rm_show_record"
        app:childSize="36dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:paddingLeft="5dp"
        android:paddingRight="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:background="@color/grey_1"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_month"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:textSize="24sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_month_tag"
            android:layout_alignBottom="@id/tv_month"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="æœˆ"
            android:textSize="12sp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_month" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl_month"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/liit_note_info" />
    </RelativeLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ib_action"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_look"
        android:layout_centerVertical="true" />

</RelativeLayout>
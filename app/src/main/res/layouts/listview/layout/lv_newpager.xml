<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:longClickable="true">

    <include android:id="@id/rl_attach_button" layout="@layout/attach_button" />

    <RelativeLayout
        android:id="@+id/rl_lv"
        android:layout_below="@+id/rl_attach_button"
        android:layout_above="@+id/rl_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_show"
            android:background="@color/grey_3"
            android:longClickable="true"
            android:dividerHeight="2dp"
            android:divider="@android:color/transparent"
            android:layout_marginBottom="32dp" />

        <ImageView
            android:id="@+id/iv_expand"
            android:layout_marginBottom="3dp"
            android:background="@color/grey_1"
            app:srcCompat="@drawable/ic_to_up"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="42dp"
            android:layout_height="24dp" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/rl_action"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="@color/grey_4"
        android:orientation="horizontal"
        android:columnCount="4"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <RelativeLayout
            android:id="@+id/rl_act_add"
            android:layout_margin="2dp"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@color/grey_3">
            <ImageView
                android:id="@+id/iv_add"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_add_note" />

            <TextView
                android:layout_below="@id/iv_add"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:text="@string/cn_add_note"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_act_delete"
            android:layout_margin="2dp"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@color/grey_3">
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_delete_1" />

            <TextView
                android:layout_below="@id/iv_delete"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:text="@string/cn_delete_note"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_act_refresh"
            android:layout_margin="2dp"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@color/grey_3">
            <ImageView
                android:id="@+id/iv_refresh"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_refresh_1" />

            <TextView
                android:layout_below="@id/iv_refresh"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"
                android:text="@string/cn_refresh"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </GridLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_income_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/li_income_detail_shape">

        <RelativeLayout
            android:id="@+id/rl_income_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl_income"
            android:layout_alignTop="@id/rl_income">

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:src="@drawable/ic_delete_1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rl_income_delete">

            <ImageView
                android:id="@+id/iv_income_show"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_show_income" />

            <LinearLayout
                android:id="@+id/ll_income_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_income_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工资"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <RelativeLayout
                    android:id="@+id/rl_iclock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_iclock"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_clock" />

                    <TextView
                        android:id="@+id/tv_income_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/iv_iclock"
                        android:text="12:04"
                        android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_income_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_income_note"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_note" />

                    <TextView
                        android:id="@+id/tv_income_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/iv_income_note"
                        android:text="月工资收入"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_income_action"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/tv_income_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="68dp"
                android:layout_toLeftOf="@id/iv_income_action"
                android:text="+ 145.75"
                android:textColor="@color/darkslategrey"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pay_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/li_pay_detail_shape">

        <RelativeLayout
            android:id="@+id/rl_pay_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl_pay"
            android:layout_alignTop="@id/rl_pay">

            <ImageView
                android:id="@id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:src="@drawable/ic_delete_1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rl_pay_delete">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_pay_show"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_show_pay" />

                <ImageView
                    android:id="@+id/iv_pay_budget"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_show_budget" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pay_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交通费"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <RelativeLayout
                    android:id="@+id/rl_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_clock"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_clock" />

                    <TextView
                        android:id="@+id/tv_pay_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/iv_clock"
                        android:text="12:04"
                        android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_budget"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_budget_1" />

                    <TextView
                        android:id="@+id/tv_pay_budget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/iv_budget"
                        android:text="生活费"
                        android:textSize="13sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_note"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_note" />

                    <TextView
                        android:id="@+id/tv_pay_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/iv_note"
                        android:text="日常生活开销"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_pay_action"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:padding="4dp"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/tv_pay_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="68dp"
                android:text="- 145.75"
                android:textColor="@color/darkred"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
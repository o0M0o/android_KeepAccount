<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/trans_1"
    android:layout_width="86dp"
    android:layout_height="52dp">
    <RelativeLayout
        android:id="@+id/rl_lines"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="52dp">
        <TextView
            android:id="@+id/tv_min_number"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:text="0"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_max_number"
            android:layout_alignBottom="@id/tv_min_number"
            android:layout_alignRight="@+id/iv_income_line"
            android:text="1000"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_pay_line"
            android:layout_below="@id/tv_min_number"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:background="@color/darkblue"
            android:layout_width="50dp"
            android:layout_height="9dp" />

        <ImageView
            android:id="@+id/iv_income_line"
            android:layout_marginTop="8dp"
            android:layout_below="@id/iv_pay_line"
            android:layout_alignLeft="@id/iv_pay_line"
            android:background="@color/darkred"
            android:layout_width="50dp"
            android:layout_height="9dp" />

        <TextView
            android:id="@+id/tv_pay_name"
            android:layout_toRightOf="@id/iv_pay_line"
            android:layout_alignBottom="@id/iv_pay_line"
            android:layout_marginLeft="5dp"
            android:text="支出"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_income_name"
            android:layout_toRightOf="@id/iv_income_line"
            android:layout_alignBottom="@id/iv_income_line"
            android:layout_marginLeft="5dp"
            android:text="收入"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
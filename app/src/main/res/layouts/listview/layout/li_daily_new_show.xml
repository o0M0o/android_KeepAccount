<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_header">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-07"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tv_day_number"
            android:text="15"
            android:layout_below="@id/tv_month"
            android:layout_alignLeft="@id/tv_month"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_day"
            android:text="日"
            android:layout_alignBottom="@id/tv_day_number"
            android:layout_toRightOf="@id/tv_day_number"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_day_in_week"
            android:text="星期三"
            android:layout_below="@id/tv_day"
            android:layout_alignLeft="@id/tv_month"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_toRightOf="@id/tv_month"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <include layout="@layout/liit_note_info" />
        </RelativeLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_hide_show"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_show"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_show_detail"
        android:layout_below="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alisbulue"
        android:divider="@android:color/transparent"
        android:paddingLeft="24dp"
        android:dividerHeight="2dp" />

</RelativeLayout>
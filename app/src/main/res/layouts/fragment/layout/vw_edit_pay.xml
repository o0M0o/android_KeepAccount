<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_reason"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ar_et_info"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_reason"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_date"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/til_reason">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/ar_et_date"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_date"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_amount"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/til_date">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/ar_et_amount"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_amount"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cn_use_budget"
        android:id="@+id/ar_tv_budget"
        android:layout_alignParentStart="true"
        android:layout_below="@id/til_amount"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="18sp"
        android:layout_marginTop="4dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ar_sp_budget"
        android:layout_below="@+id/til_amount"
        android:spinnerMode="dropdown"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ar_tv_budget"
        android:layout_marginLeft="16dp" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/til_note"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ar_sp_budget"
        android:layout_marginTop="8dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ar_et_note"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_note">
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>
</RelativeLayout>
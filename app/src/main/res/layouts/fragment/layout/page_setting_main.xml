<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_remind"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/ghostwhite"
        android:clickable="true">

        <TextView
            android:text="@string/setting_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="56dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_alarm"
            android:id="@+id/imageView4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/right_arrow"
            android:id="@+id/imageView3"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/rl_remind"
        android:layout_marginTop="2dp"
        android:id="@+id/rl_reformat_data"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/ghostwhite"
        android:clickable="true">

        <TextView
            android:text="@string/setting_reformat_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="56dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_setting_reformat1"
            android:id="@+id/imageView6"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/right_arrow"
            android:id="@+id/imageView7"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_reformat_data"
        android:layout_marginTop="2dp"
        android:id="@+id/rl_chart_color"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/ghostwhite"
        android:clickable="true">

        <TextView
            android:id="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:text="@string/setting_chart_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_setting_color_1"
            android:id="@+id/imageView10"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/right_arrow"
            android:id="@+id/imageView11"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/rl_chart_color"
        android:layout_marginTop="16dp"
        android:id="@+id/rl_check_version"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/ghostwhite"
        android:clickable="true">

        <TextView
            android:id="@+id/textView12"
            android:layout_alignParentLeft="true"
            android:text="@string/setting_check_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_setting_check_version"
            android:id="@+id/imageView13"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/right_arrow"
            android:id="@+id/imageView14"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_check_version"
        android:layout_marginTop="2dp"
        android:id="@+id/rl_share_app"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/ghostwhite"
        android:clickable="true">

        <TextView
            android:id="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:text="@string/setting_share_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_setting_share"
            android:id="@+id/imageView16"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/right_arrow"
            android:id="@+id/imageView17"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp" />
    </RelativeLayout>

</RelativeLayout>
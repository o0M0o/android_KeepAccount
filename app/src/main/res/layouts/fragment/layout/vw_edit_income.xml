<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/grey_1">
    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_reason"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:background="@color/white">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ar_et_info"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_reason"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_date"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/til_reason"
        android:background="@color/white"
        android:layout_marginTop="1dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/ar_et_date"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_date"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_amount"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/til_date"
        android:background="@color/white"
        android:layout_marginTop="1dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/ar_et_amount"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_amount"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/til_note"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/til_amount"
        android:background="@color/white">

        <android.support.design.widget.TextInputEditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ar_et_note"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="@string/cn_note">
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>
</RelativeLayout>
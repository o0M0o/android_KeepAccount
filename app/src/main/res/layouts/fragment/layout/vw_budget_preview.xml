<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:paddingStart="12dp"
        android:paddingEnd="4dp">

        <ImageView
            android:id="@+id/iv_budget_name"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_budget_1" />

        <TextView
            android:id="@+id/tv_name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_budget_name"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/iv_budget_name"
            android:text="@string/budget_name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_budget_name"
            android:layout_alignStart="@id/tv_name_tag"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/iv_budget_name"
            android:text="生活预算"
            android:textColor="@color/darkslategrey"
            android:textSize="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:paddingStart="12dp"
        android:paddingEnd="4dp">

        <ImageView
            android:id="@+id/iv_budget_amount"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_yuan" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/iv_budget_amount"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_amount_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/budget_amount"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_amount"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_all_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="6dp"
                    android:text="7500"
                    android:textColor="@color/darkslategrey"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/leave_amount"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_leave_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="6dp"
                    android:text="7500"
                    android:textColor="@color/darkred"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:paddingStart="12dp"
        android:paddingEnd="4dp">

        <ImageView
            android:id="@+id/iv_budget_note"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_note" />

        <TextView
            android:id="@+id/tv_note_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_budget_note"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/iv_budget_note"
            android:text="@string/budget_note"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_budget_note"
            android:layout_alignStart="@id/tv_note_tag"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/iv_budget_note"
            android:text="2016年7月-12月生活费预算"
            android:textColor="@color/darkslategrey"
            android:textSize="14dp" />
    </RelativeLayout>

</LinearLayout>
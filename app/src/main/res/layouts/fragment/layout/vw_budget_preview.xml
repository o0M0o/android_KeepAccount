<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grey_1"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_name"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="4dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_budget_name"
            android:src="@drawable/ic_budget_1"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <TextView
            android:id="@+id/tv_name_tag"
            android:layout_alignTop="@id/iv_budget_name"
            android:layout_toRightOf="@id/iv_budget_name"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/budget_name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_name"
            android:textColor="@color/darkslategrey"
            android:textSize="14dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/iv_budget_name"
            android:layout_alignBottom="@id/iv_budget_name"
            android:layout_alignLeft="@id/tv_name_tag"
            android:text="生活预算"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_amount"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="4dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_budget_amount"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_yuan"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_budget_amount"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_amount_tag"
                android:text="@string/budget_amount"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/all_amount"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_all_amount"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/darkslategrey"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"
                    android:text="7500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/leave_amount"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_leave_amount"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/darkred"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"
                    android:text="7500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_note"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="4dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_budget_note"
            android:src="@drawable/ic_note"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <TextView
            android:id="@+id/tv_note_tag"
            android:layout_alignTop="@id/iv_budget_note"
            android:layout_toRightOf="@id/iv_budget_note"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/budget_note"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_note"
            android:textColor="@color/darkslategrey"
            android:textSize="14dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/iv_budget_note"
            android:layout_alignBottom="@id/iv_budget_note"
            android:layout_alignLeft="@id/tv_note_tag"
            android:text="2016年7月-12月生活费预算"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
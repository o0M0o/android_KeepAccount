<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.allure.lbanners.LMBanners
        android:id="@+id/banners"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        app:auto_play="false"
        app:canLoop="true"
        app:durtion="5000"
        app:horizontal_transitionEffect="accordion"
        app:indicator_position="bottom_mid"
        app:indicator_select="@drawable/page_indicator_select"
        app:indicator_unselect="@drawable/page_indicator_unselect"
        app:indicator_width="5"
        app:isVertical="false"
        app:scroll_duration="1000" />

    <cn.wxm.andriodutillib.DragGrid.DragGridView
        android:id="@+id/dgv_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_buttons"
        android:layout_below="@+id/banners"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="2dp"
        android:stretchMode="columnWidth" />

    <RelativeLayout
        android:id="@+id/rl_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="4dp">

        <RelativeLayout
            android:id="@+id/rl_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:padding="2dp">

            <ImageView
                android:id="@+id/iv_channel"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_channel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_channel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/cn_channel"
                android:textColor="@color/text_fit"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/vw_tag"
            android:layout_width="1dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/rl_channel"
            android:background="@color/darkorange" />


        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/vw_tag"
            android:padding="2dp">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_menu_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_setting"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/cn_setting"
                android:textColor="@color/text_fit"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.allure.lbanners.LMBanners
        android:id="@+id/banners"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        app:auto_play="false"
        app:canLoop="true"
        app:durtion="5000"
        app:horizontal_transitionEffect="accordion"
        app:indicator_position="bottom_mid"
        app:indicator_select="@drawable/page_indicator_select"
        app:indicator_unselect="@drawable/page_indicator_unselect"
        app:indicator_width="5"
        app:isVertical="false"
        app:scroll_duration="1000" />

    <wxm.androidutil.DragGrid.DragGridView
        android:id="@+id/dgv_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_buttons"
        android:layout_below="@+id/banners"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:padding="4dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp" />

    <RelativeLayout
        android:id="@+id/rl_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="4dp">

        <wxm.uilib.IconButton.IconButton
            android:id="@+id/ib_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            app:ibActName="@string/cn_channel"
            app:ibActNameColor="@color/text_fit"
            app:ibActNameSize="12sp"
            app:ibIcon="@drawable/ic_channel"
            app:ibIconHeight="38dp"
            app:ibIconWidth="38dp"
            app:ibOrientation="vertical" />

        <ImageView
            android:id="@+id/vw_tag"
            android:layout_width="1dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/ib_channel"
            android:background="@color/darkorange" />

        <wxm.uilib.IconButton.IconButton
            android:id="@+id/ib_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/vw_tag"
            app:ibActName="@string/cn_setting"
            app:ibActNameColor="@color/text_fit"
            app:ibActNameSize="12sp"
            app:ibIcon="@drawable/ic_menu_setting"
            app:ibIconHeight="38dp"
            app:ibIconWidth="38dp"
            app:ibOrientation="vertical" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/rl_pay_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/white">
        <TextView
            android:layout_centerVertical="true"
            android:text="@string/setting_pay_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:background="@color/antiquewhite"
            android:id="@+id/iv_pay"
            android:layout_alignParentRight="true"
            android:layout_marginRight="140dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="2dp"
        android:id="@+id/rl_income_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_centerVertical="true"
            android:text="@string/setting_income_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:background="@color/aliceblue"
            android:id="@+id/iv_income"
            android:layout_alignParentRight="true"
            android:layout_marginRight="140dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="12dp"
        android:id="@+id/rl_budget_balance_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_centerVertical="true"
            android:text="@string/setting_budget_balance_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:background="@color/aliceblue"
            android:id="@+id/iv_budget_balance"
            android:layout_alignParentRight="true"
            android:layout_marginRight="140dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginTop="2dp"
        android:id="@+id/rl_budget_used_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_centerVertical="true"
            android:text="@string/setting_budget_used_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:textColor="@color/black" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:background="@color/aliceblue"
            android:id="@+id/iv_budget_used"
            android:layout_alignParentRight="true"
            android:layout_marginRight="140dp" />
    </RelativeLayout>

</GridLayout>
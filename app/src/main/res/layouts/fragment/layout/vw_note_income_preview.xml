<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grey_1"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rl_record"
        android:background="@color/white"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_record"
                android:layout_centerVertical="true"
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/darkslategrey"
                android:textSize="16sp"
                android:text="收入"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_pay_info"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:text="工资"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_amount_date"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:src="@drawable/ic_calendar"
                android:layout_width="42dp"
                android:layout_height="42dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/darkslategrey"
                    android:textSize="14sp"
                    android:text="2016年10月30日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_day_in_week"
                        android:textColor="@color/darkslategrey"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"
                        android:text="星期日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/darkslategrey"
                        android:textSize="14sp"
                        android:text="10:52"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:src="@drawable/ic_yuan"
                android:layout_width="42dp"
                android:layout_height="42dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/amount"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/darkred"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"
                    android:text="7500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_note"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_budget_note"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_note"
            android:layout_width="42dp"
            android:layout_height="42dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/note_note"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_note"
                android:layout_marginTop="4dp"
                android:textColor="@color/darkslategrey"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:text="10月份工资"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
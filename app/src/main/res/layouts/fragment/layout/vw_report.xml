<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_load_data"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/grey_1"
        android:padding="4dp">

        <RelativeLayout
            android:id="@+id/rl_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_day_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起止日期 : "
                android:textColor="@color/text_fit"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/tv_day_tag"
                android:text="2017-02-01 - 2017-02-17"
                android:textColor="@color/text_fit"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_date">

            <RelativeLayout
                android:id="@+id/rl_data_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_pay_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总支出 : "
                    android:textColor="@color/text_fit"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/tv_pay_tag"
                    android:text="1450.75"
                    android:textColor="#f15b6c"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_data_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_data_pay">

                <TextView
                    android:id="@+id/tv_income_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总收入 : "
                    android:textColor="@color/text_fit"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/tv_income_tag"
                    android:text="3150.75"
                    android:textColor="#5c7a29"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <WebView
        android:id="@+id/wv_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/rl_stats" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/rl_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <wxm.uilib.IconButton.IconButton
            android:id="@+id/ib_manage"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/vw_tag"
            android:background="@drawable/rl_action_shape"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            app:ibActName="@string/manager"
            app:ibActNameSize="10sp"
            app:ibIcon="@drawable/ic_pencil"
            app:ibIconHeight="32dp"
            app:ibIconWidth="32dp"
            app:ibOrientation="vertical" />

        <wxm.uilib.IconButton.IconButton
            android:id="@+id/ib_sort"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@id/ib_manage"
            android:background="@drawable/rl_action_shape"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            app:ibActName="@string/cn_sort_up_by_name"
            app:ibActNameSize="10sp"
            app:ibIcon="@drawable/ic_sort_up_1"
            app:ibIconHeight="32dp"
            app:ibIconWidth="32dp"
            app:ibOrientation="vertical" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gv_record_info"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:horizontalSpacing="1dp"
        android:numColumns="2"
        android:padding="2dp"
        android:verticalSpacing="1dp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:id="@+id/rl_start_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:padding="2dp">

        <TextView
            android:id="@+id/tv_start_day_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/hint_report_start_day"
            android:textColor="@color/text_fit"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_start_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/tv_start_day_tag"
            android:text="@string/hint_input_day"
            android:textColor="@color/forestgreen"
            android:textSize="18sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_start_day"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:padding="2dp">

        <TextView
            android:id="@+id/tv_end_day_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/hint_report_end_day"
            android:textColor="@color/text_fit"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_end_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/tv_end_day_tag"
            android:text="@string/hint_input_day"
            android:textColor="@color/forestgreen"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>
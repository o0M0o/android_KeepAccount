<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="24dp"
        android:layout_row="0"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:text="@string/setting_pay_color"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_pay"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="140dp"
            android:layout_marginTop="2dp"
            android:background="@color/antiquewhite" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="2dp"
        android:layout_row="1"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:text="@string/setting_income_color"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_income"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="140dp"
            android:layout_marginTop="2dp"
            android:background="@color/aquamarine" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="12dp"
        android:layout_row="2"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:text="@string/setting_budget_balance_color"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_budget_balance"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="140dp"
            android:layout_marginTop="2dp"
            android:background="@color/brown" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="2dp"
        android:layout_row="3"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:text="@string/setting_budget_used_color"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_budget_used"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="140dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark" />
    </RelativeLayout>

</GridLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="true"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="36dp"
                android:src="@drawable/ic_to_left_64dp"
                android:tint="@color/mediumseagreen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_date_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018/06/16"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/ic_to_right_64dp"
                android:tint="@color/mediumseagreen"
                app:layout_constraintEnd_toEndOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ToggleButton
                android:id="@+id/tb_income"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textOff="@string/tv_income_not_show"
                android:textOn="@string/tv_income_show"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/tb_pay" />

            <ToggleButton
                android:id="@+id/tb_pay"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textOff="@string/tv_pay_not_show"
                android:textOn="@string/tv_pay_show"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent" />


            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tb_pay" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wxm.keepaccount.MainActivity"
    android:background="#80ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="Hello World!"
        android:id="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#7fa87f" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记录支出"
        android:id="@+id/bt_record_pay"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
        android:onClick="onClickPayRecord" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记录收入"
        android:id="@+id/bt_record_income"
        android:layout_alignTop="@+id/bt_record_pay"
        android:layout_alignEnd="@+id/textView"
        android:drawableTop="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
        android:onClick="onClickIncomeRecord" />
</RelativeLayout>

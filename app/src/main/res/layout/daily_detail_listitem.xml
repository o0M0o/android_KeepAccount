<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:longClickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/DailyDetailTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:focusable="false"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/DailyDetailText"
        android:layout_below="@+id/DailyDetailTitle"
        android:layout_alignParentStart="true"
        android:textSize="14dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:id="@+id/dailydetail_cb"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:text="删除"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onCBClick"
        android:visibility="invisible"
        android:layout_centerVertical="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="修改"
        android:id="@+id/dailydetail_bt"
        android:layout_alignParentTop="false"
        android:layout_toStartOf="@+id/dailydetail_cb"
        android:visibility="invisible"
        android:layout_marginRight="14dp"
        android:onClick="onBTClick"
        android:background="@color/beige"
        android:layout_centerVertical="true" />

</RelativeLayout>
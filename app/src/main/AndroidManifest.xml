<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="wxm.KeepAccount">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Base.utility.ContextUtil"
        android:allowBackup="true"
        android:icon="@drawable/ic_keepaccount_app"
        android:label="@string/cn_keepaccount_applabel"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:theme, android:label">
        <activity
            android:name=".ui.acinterface.ACLogin"
            android:label="@string/cn_keepaccount_applabel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.acinterface.ACNoteShow"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTop"
            android:exported="true"
            android:label="@string/ac_title_noteshow"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.acutility.ACAddUsr"
            android:configChanges="orientation|screenSize"
            android:label="@string/label_add_usr"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.acinterface.ACHelp"
            android:label="@string/title_help"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.acinterface.ACWelcome"
            android:label="@string/label_welcome"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.acutility.ACNoteEdit"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.acutility.ACRemindEdit"
            android:exported="true" />
        <activity android:name=".ui.acinterface.ACRemindShow" />
        <activity
            android:name=".ui.acutility.ACSetting"
            android:exported="true"
            android:label="@string/app_setting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.acutility.ACDailyDetail"
            android:exported="false"
            android:label="@string/title_daily_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.acutility.ACCalendarShow"
            android:exported="false"
            android:label="日历展示"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.acutility.ACPreveiwAndEdit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.acutility.ACRecordInfoEdit"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
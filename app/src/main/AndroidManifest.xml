<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wxm.KeepAccount">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Base.utility.ContextUtil"
        android:allowBackup="true"
        android:icon="@mipmap/ic_keepaccount_launcher"
        android:label="@string/cn_applabel"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">

        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".ui.activities.ACDailyDetail" />
        <activity android:name=".ui.activities.ACRecord" />
        <activity
            android:name=".ui.activities.ACShowRecord"
            android:label="@string/title_activity_start" />
        <activity
            android:name=".ui.activities.ACLogin"
            android:label="@string/cn_applabel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.ACAddUsr"
            android:label="@string/title_activity_add_account" />
        <activity android:name=".ui.activities.ACHelp" />
        <activity android:name=".ui.activities.ACRecordType" />
        <activity
            android:name=".ui.activities.ACRecordTypeEdit"
            android:label="@string/title_activity_acrecord_type_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.ACWelcome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activities.ACBudgetManager"
            android:label= "@string/ac_label_budget_manager" />
